
<h1 style="color: #333; font-size: 24px; text-align: center;">Add Your Blog</h1>

<%= form_tag("/blogapps/create", method: "post") do  %>
  <div style="margin-bottom: 10px;">
    <%= label_tag(:title, "Title", style: "font-size: 18px;") %>
    <%= text_field_tag(:"blogapp[title]", nil, style: "width: 100%; font-size: 16px; padding: 5px;") %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= label_tag(:body, "Body", style: "font-size: 18px;") %>
    <%= text_area_tag(:"blogapp[body]", nil, style: "width: 100%; height: 200px; font-size: 16px; padding: 5px;") %>
  </div>

  <div>
    <%= label_tag(:author_id, "Views", style: "font-size: 18px;") %>
    <%= number_field_tag(:"blogapp[views]", nil, style: "width: 100%; font-size: 16px; padding: 5px;") %>
  </div>

  <%= submit_tag("Submit", style: "margin-top: 10px; padding: 10px; background-color: #007bff; color: #fff; border: none; font-size: 18px; cursor: pointer;") %>
<% end %>
